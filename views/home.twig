{% extends "base.twig" %}

{% block content %}
    <div class="home-wrapper">
        <div class="posts-container">
        {% for post in posts %}
            {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
        {% endfor %}
        </div>
        {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
        <aside class="sidebar">
            <ul>{{ sidebar_1 }}</ul>
		</aside>
    </div><!-- /home-wrapper -->
{% endblock %}