{% extends "base.twig" %}
{% import 'partial/macros.twig' as macros %}

{% block content %}
	<div class="content-wrapper">
		<div class="posts-container">
			<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
				<img src="{{ post.thumbnail.src|resize(1200, 300) }}">
				<section class="article-content">
					<h1 class="article-h1">{{ post.title }}</h1>
					<div class="article-body">
						{{post.content}}
					</div>
					<div class="article-entry-footer">{{ macros.post_terms( post ) }}</div>
				</section>
			</article>
			<hr />
			<div class="pagination-container">
				{% if post.prev %}
				<h3>Previous article</h3>

				<a href="{{ post.prev.link }}">{{ post.prev.title }}</a>
				{% endif %}

				{% if post.next %}
				<h3>Next article</h3>

				<a href="{{ post.next.link }}">{{ post.next.title }}</a>
				{% endif %}
				</div> <!-- /pagination-container -->
		</div>
		<aside class="sidebar">
			<ul>{{sidebar_1}}</ul>
		</aside>
	</div><!-- /content-wrapper -->
{% endblock %}
